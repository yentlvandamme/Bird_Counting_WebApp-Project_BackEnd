@model BirdCounting.Web.ViewModels.PostCountPage_VM

@{
    ViewData["Title"] = "Create";
}

<h2>@Html.DisplayFor(bird => Model.Bird.Name)</h2>

<hr />

<img src="@Html.DisplayFor(birdPicture => Model.Bird.ImageUrl)" width="300" style="margin: 20px 0 40px"/>

<p><strong>Total spots: </strong>@Html.DisplayFor(birdTotalSpots => Model.TotalSpots)</p>

@*<p><strong>Times you spoted this bird: </strong>@Html.DisplayFor(birdPersonalSpots => Model.PersonalSpots)</p>*@

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Choose an event</label>
                @Html.DropDownList("selectedEvent", Model.selectEvents, "Pick an event")
            </div>
            <div class="form-group">
                <label asp-for="createdLog.Comment" class="control-label"></label>
                <input asp-for="createdLog.Comment" class="form-control" />
                <span asp-validation-for="createdLog.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="createdLog.BirdID" class="form-control" type="hidden" value=@Model.Bird.ID/>
                <span asp-validation-for="createdLog.BirdID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="SPOT" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Overview</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
