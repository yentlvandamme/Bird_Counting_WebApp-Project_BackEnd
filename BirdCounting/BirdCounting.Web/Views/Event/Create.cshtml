@model BirdCounting.Web.ViewModels.AddEventPage_VM

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Event.EventName" class="control-label">Name of the Event</label>
                <input asp-for="Event.EventName" class="form-control" />
                <span asp-validation-for="Event.EventName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Where the event will take place</label>
                @Html.DropDownList("selectedRegion", Model.selectRegions, "Pick a region")
            </div>

            <div class="form-group">
                <label asp-for="Event.StartDate" class="control-label">Starts on: ...</label>
                <input asp-for="Event.StartDate" class="form-control" />
                <span asp-validation-for="Event.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.EndDate" class="control-label">Ends on...</label>
                <input asp-for="Event.EndDate" class="form-control" />
                <span asp-validation-for="Event.EndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
